@model Transactions

@{
    ViewData["Title"] = "Delete Transaction";
}

<div class="alert alert-warning align-items-center mt-3" role="alert">
  <h3 class="mb-3 text-center">
    ¿Are you sure you want to delete the transaction?: @Model.Description?
  </h3>
</div>
<div class="container">
  <form asp-action="DeleteTransaction">
    <div class="mb-3 col text-center">
      <input type="hidden" asp-for="Id" />
      <button type="submit" class="btn btn-secondary">Delete</button>
      <a class="btn btn-secondary" asp-action="Index">Cancel</a>
    </div>
  </form>
</div>
