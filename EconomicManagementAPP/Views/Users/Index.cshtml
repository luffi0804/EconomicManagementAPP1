@model IEnumerable<Users>

@{
    ViewData["Title"] = "List Users";
}

<h1 class="text-center">Users List</h1>
<br />
<br />
<div style="text-align: right">
  <a asp-action="Create" class="btn btn-secondary mb-3">Create User</a>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Emails</th>
      <th style="text-align: right">Actions</th>
    </tr>
  </thead>
  <tbody id="reordenable">
    @foreach (var users in Model) 
    {
    <tr>
      <td>@users.Email</td>
      <td>
        <div style="text-align: right">
          <input type="hidden" value="@users.Id" class="ids" />
          <a class="btn btn-secondary" asp-action="Modify" asp-route-id="@users.Id">Modify</a>
          <a class="btn btn-secondary" asp-action="Delete" asp-route-id="@users.Id">Delete</a>
        </div>
      </td>
    </tr>
    }
  </tbody>
</table>
