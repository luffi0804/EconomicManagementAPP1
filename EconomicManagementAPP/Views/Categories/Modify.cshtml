@model Categories
@{
    ViewData["Title"] = "Categorie";
}

<h1>Modify Categorie @Model.Name</h1>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Modify">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"> </span>
    </div>
    <div class="mb-3">
        <label asp-for="OperationTypeId" class="form-label"></label>
        <input type="number" asp-for="OperationTypeId" class="form-control" />
        <span asp-validation-for="OperationTypeId" class="text-danger"> </span>
    </div>
    <div class="mb-3">
        <label asp-for="UserId" class="form-label"></label>
        <input type="number" asp-for="UserId" class="form-control" />
        <span asp-validation-for="UserId" class="text-danger"> </span>
    </div>
    <button type="submit" class="btn btn-secondary">Modify</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}

